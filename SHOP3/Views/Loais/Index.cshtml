@model IEnumerable<SHOP3.Models.Loai>
@{
    ViewData["Title"] = "Loại HH";
}
@{
    Layout = "_Admin";
}
<head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
    <h3 class="w3-bar-item w3-padding w3-white" style="width:100%; text-align: center">Loại Hàng Hóa</h3>

    <a asp-action="Create" asp-controller="Loais" class="w3-bar-item w3-button w3-padding w3-pale-green"><i class="fa fa-plus-square"></i> Thêm Loại HH</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Mã Loại
                </th>
                <th>
                    Tên Loại
                </th>

                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaLoai</td>
                    <td>@item.TenLoai</td>

                    <td>
                        <a asp-controller="Loais" asp-action="Edit" asp-route-id="@item.MaLoai">Sửa</a> |

                        <a asp-controller="loais" asp-action="Delete" asp-route-id="@item.MaLoai" onclick="return confirm('Bạn có chắc muốn xóa ?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>